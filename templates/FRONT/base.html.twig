<!DOCTYPE html>
<html lang="fr">
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <title>{% block title %}MyPillsBox{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
            <link href="https://fonts.googleapis.com/css2?family=Krub:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;1,200;1,300;1,400;1,500;1,600;1,700&family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet">

            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

            <link rel="stylesheet" href="{{ asset('assets/css/bulma.css')}}">
            <link rel="stylesheet" href="{{ asset('assets/css/style.css')}}">

            <link rel="shortcut icon" href=" {{ asset('assets/pictures/visual_identity/MyPillsBox_favicon.png')}}" type="image/x-icon">
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
            <script defer src="{{ asset('assets/js/bulma/index.js')}}"></script>
            
            <script defer src="{{ asset('assets/js/components/flashMessages.js')}}"></script>
            
            <script defer src="{{ asset('assets/js/index.js')}}"></script>
        {% endblock %}
    </head>
    <body>
        {% block body %}
        
            {% block header %}
        
            {{ include('@LAYOUT/_header.html.twig')}}

            {{ include('@LAYOUT/_flash_message.html.twig')}}
            
            {% endblock %}

            {% block subnavSearch %}


            {% endblock %}

            {% block content %}
            

            {% endblock %}

            {% block footer %}
        
            {{ include('@LAYOUT/_footer.html.twig')}}

            {% endblock %}

        {% endblock %}
    </body>
</html>
