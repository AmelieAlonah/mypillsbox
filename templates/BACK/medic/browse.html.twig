{% extends "@FRONT/base.html.twig" %}

{% block title %}Les médicaments{% endblock %}

{% block content %}

<section class="box section is-small">
    <h1 class="title">La liste des médicaments :</h1>
    <h2 class="subtitle">
        <button class="button is-success ">
            <span class="icon-text">
                <span class="icon">
                    <i class="fas fa-plus-square"></i>
                </span>  
                <a href="{{ path('back_office_medic_add')}}">
                    <span>AJOUTER un médicament</span>
                </a>
            </span>
        </button>
    </h2>


{% for medic in medics %}

    <table class="table ">

                <thead> 
                    <tr class="subtitle is-4 has-text-centered">
                        <td>
                            <h4 >Nom du médicament</h4> 
                        </td>
                        <td>
                            {{ medic.name }}
                            <button class="button is-medium is-warning is-italic has-text-weight-bold has-text-black has-text-centered">
                                <span class="icon-text">
                                    <span class="icon">
                                        <i class="fas fa-edit"></i>
                                    </span>
                                    <span>Editer</span>
                                </span>
                            </button>
                            <button class="button is-medium is-danger is-italic has-text-weight-bold has-text-black has-text-centered">
                                <span class="icon-text">
                                    <span class="icon">
                                        <i class="fas fa-trash-alt"></i>
                                    </span>
                                    <span>Supprimer</span>
                                </span>
                            </button>
                        </td>
                    </tr>
                </thead>

                <tbody>
                    <tr><th>Code CIS</th>                                                       <td> {{ medic.codeCIS }} </td></tr>
                    <tr><th>Code CPD</th>                                                       <td> {{ medic.idCPD }} </td></tr>
                    <tr><th>Nom du médicament</th>                                              <td> {{ medic.name }} </td></tr>
                    <tr><th>Composition du médicament</th>                                      <td> {{ medic.medicCompo }} </td></tr>
                    <tr><th>Type</th>                                                           <td> {{ medic.medicType }} </td></tr>
                    <tr><th>Indications thérapeutiques</th>                                     <td> {{ medic.medicCondition }} </td></tr>
                    <tr><tr><th>Posologie recommandée</th>                                      <td> {{ medic.medicDosage }} </td></tr>
                    <tr><tr><th>Autres situations cliniques</th>                                <td> {{ medic.medicExeption }} </td></tr>
                    <tr><th>Mode d'administration</th>                                          <td> {{ medic.medicMethodAdministration }} </td></tr>
                    <tr><th>Contres-indications</th>                                            <td> {{ medic.medicDanger }} </td>    </tr>
                    <tr><th>Dose maximale recommandée</th>                                      <td> {{ medic.medicDosageMax }} </td></tr><tr><th>Interactions médicamenteuses</th>                                   <td> {{ medic.medicInteractionOtherMedic }} </td></tr>
                    <tr><th>Impact sur la fertilité, grossesse et allaitement</th>              <td> {{ medic.fertilyPregnancyBreastfeeding }} </td></tr>
                    <tr><th>Effets indésirables</th>                                            <td> {{ medic.medicAdverseReaction }} </td></tr>
                </tbody>
        {% endfor %}
        </tbody>
    </table>
</section>
{% endblock %}