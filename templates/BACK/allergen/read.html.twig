{% extends "@FRONT/base.html.twig" %}

{% block title %}MyPillsBox : Back : L'allergène{% endblock %}

{% block content %}
<section class="section box is-small is-flex is-justify-content-center is-align-items-center">
        <h1 class="title has-text-centered">Back-Office : Page de l'allergène  </h1>
    </section>

<section class="box section is-small">
        <h1 class="title">{{allergen.name | raw }}</h1>
        <h2 class="subtitle has-text-right">
            <button class="button is-success is-medium ">
                <span class="icon-text">
                    <span class="icon">
                        <i class="fas fa-undo-alt"></i>
                    </span>
                    <a href="{{ path('back_office_allergen_browse')}}">
                    <span>RETOUR</span>
                    </a>
                </span>
            </button>
            <button class="button is-medium is-warning is-light is-italic has-text-weight-bold has-text-black has-text-centered">
            <span class="icon-text">
                <span class="icon">
                    <i class="fas fa-edit"></i>
                    </span>
                    <a href="{{ path('back_office_allergen_update', {id: allergen.id} )}}">
                        <span>Editer</span>
                    </a>
                </span>
            </button>
        </h2>
        
        <section class="box section is-medium columns is-desktop p-1">
            
            <div class="card m-3 p-3 medic_infos column">
                    <h2 class="subtitle has-text-centered">Médicament(s) :</h2>
                    <div class="content column">
                    {% for medicines in allergen.medicines %}
                        {{ medicines.name | raw }}
                        <a href="{{path('back_office_medic_read', {id: medicines.id})}}">Regarder</a> <br>
                        {% endfor %}
                    </div>
            </div>
        </section>

    </section>
{% endblock %}